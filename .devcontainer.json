{
    "name": "rust-p2p-app-devcontainer",
    "build": {
        "dockerfile": "./docker/Dockerfile",
        "context": "."
    },
    "workspaceFolder": "/var/app",
    "workspaceMount": "source=${localWorkspaceFolder},target=/var/app,type=bind,consistency=cached",
    "remoteUser": "app",
    "containerEnv": {
        "BASH_ENV": "/etc/profile"
    },
    "mounts": [
        "source=rustup-cache,target=/usr/local/rustup,type=volume",
        "source=cargo-registry,target=/usr/local/cargo/registry,type=volume",
        "source=cargo-git,target=/usr/local/cargo/git,type=volume"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "vadimcn.vscode-lldb",
                "ms-vscode.makefile-tools",
                "editorconfig.editorconfig"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.inlayHints.enabled": "off",
                "files.watcherExclude": {
                    "**/target/**": true
                },
                "rust-analyzer.check": {
                    "command": "clippy"
                },
                "rust-analyzer.inlayHints.enable": false,
                "rust-analyzer.inlayHints.bindingModeHints.enable": false,
                "rust-analyzer.inlayHints.chainingHints.enable": false,
                "rust-analyzer.inlayHints.closingBraceHints.enable": false,
                "rust-analyzer.inlayHints.discriminantHints.enable": "never",
                "rust-analyzer.inlayHints.expressionAdjustmentHints.enable": "never",
                "rust-analyzer.inlayHints.genericParameterHints.enable": "never",
                "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "never",
                "rust-analyzer.inlayHints.parameterHints.enable": false,
                "rust-analyzer.inlayHints.reborrowHints.enable": "never",
                "rust-analyzer.inlayHints.typeHints.enable": false,
                "rust-analyzer.lens.enable": false
            }
        }
    },
    "runArgs": [
        "--rm"
    ],
    "postCreateCommand": "rustup component add rustfmt clippy && chmod +x /var/app/run.sh || true"
}
